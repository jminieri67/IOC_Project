<Window x:Class="IOC.WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IOC.WpfApp"
        mc:Ignorable="d"
		ResizeMode="NoResize"
        Title="MainWindow" Height="200" Width="500
">
	<Grid>
		<Button x:Name="btnAdd" Content="Add" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Click="btnAdd_Click" Width="35"/>
		<TextBox x:Name="tbResult" HorizontalAlignment="Center" Margin="0,35,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="480" Height="139"/>
		<Button x:Name="btnException" Content="Exception" HorizontalAlignment="Left" Margin="50,10,0,0" VerticalAlignment="Top" Width="70" Click="btnException_Click"/>
	</Grid>
</Window>
